@model CarsViewModel
<html>
<section class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-11 col-md-9 col-lg-8">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <form asp-controller="Cars" asp-action="Add" method="post" class="form-control">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <label asp-for="Make" class="col-md-2 form-control"></label>
                            <div class="col-md-10">
                                <input asp-for="Make" class="form-control"/>
                            </div>
                            <input class="btn btn-danger" type="submit" value="Add"/>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</html>