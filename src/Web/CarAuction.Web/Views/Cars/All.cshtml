@model CarsListViewModel

<!-- Search Start -->
<div class="container-fluid bg-white pt-3 px-lg-5">
    <div class="row mx-n2 justify-content-center">
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select id="manufacturers" asp-for="SearchModel.ManufacturerId" class="form-control" asp-items="Model.SearchModel.ManufacturerItems" data-live-search="true"></select>
        </div>
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <select id="models" asp-for="SearchModel.ModelId" class="form-control" asp-items="Model.SearchModel.ModelsItems" data-live-search="true"></select>
        </div>
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <div class="date mb-3" id="date" data-target-input="nearest">
                <input type="date" class="form-control p-4" placeholder="Auction Start date"
                       data-target="#date" data-toggle="datetimepicker"/>
            </div>
        </div>
        <div class="col-xl-2 col-lg-4 col-md-6 px-2">
            <button class="btn btn-primary btn-block mb-3" type="submit" style="height: 50px;">Search</button>
        </div>
    </div>
</div>
<!-- Search End -->
<!--Cars Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <h1 class="display-4 text-uppercase text-center mb-5">Find Your Next Car</h1>
        <div class="row">
            @foreach (var car in Model.Cars)
            {
                @* <a asp-controller="Cars" asp-action="ById" asp-route-id="@car.Id"> *@
                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="rent-item mb-4">
                        <img class="img--cover" src="@car.ImageUrl" alt="">
                        <h4 class="text-uppercase mb-4 text-center">@car.Title</h4>
                        <div class="d-flex justify-content-center mb-4">
                            <div class="px-2">
                                <i class="fa-regular fa-calendar-days text-primary mr-1"></i>
                                <span>@car.ModelYearOfProduction</span>
                            </div>
                            <div class="px-2 border-left border-right">
                                <i class="fa fa-cogs text-primary mr-1"></i>
                                <span>@car.ModelVehicleType.ToString()</span>
                            </div>
                            <div class="px-2">
                                <i class="fa fa-road text-primary mr-1"></i>
                                <span>@car.Milleage</span>
                            </div>
                            <div class="px-2 border-left border-right">
                                <i class="fa-sharp fa-solid fa-dollar-sign text-primary mr-1"></i>
                                <span>@car.StartingPrice</span>
                            </div>
                        </div>
                        <a asp-controller="Cars" asp-action="ById" asp-route-id="@car.Id" class="btn btn-primary btn-md col-md-12 rounded"> View</a>
                    </div>
                </div>
                // </a>
            }
        </div>
    </div>
</div>
<!-- Rent A Car End -->
<!-- Pagination -->
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link btn @if (Model.HasPreviousPage == false) {<text>disabled</text>}" asp-action="All" asp-route-id="@Model.PreviousPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item">
                    <a class="page-link btn" asp-action="All" asp-route-id="@i">@i</a>
                </li>
            }
        }
        <li class="page-item">
            <a class="page-link btn" asp-action="All" asp-route-id="@Model.PageNumber">@Model.PageNumber</a>
        </li>
        @for (int i = Model.PageNumber + 1; i < Model.PageNumber + 3; i++)
        {
            if (Model.PagesCount >= i)
            {
                <li class="page-item">
                    <a class="page-link btn" asp-action="All" asp-route-id="@i">@i</a>
                </li>
            }
        }
        <li class="page-item">
            <a class="page-link btn @if (Model.HasNextPage == false) {<text>disabled</text>}" asp-action="All" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>
<!-- Pagination End -->
<div class="container-fluid">
        <vc:cars></vc:cars>
</div>